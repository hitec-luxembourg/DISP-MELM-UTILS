<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<elements xmlns="http://hitec.lu/pss/xsd/mapelement/hierarchy"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://hitec.lu/pss/xsd/mapelement/hierarchy mapelement-hierarchy.xsd"
  version="1.0">
  <description>
    <library-type>areas</library-type>
    <library-version>1.1</library-version>
    <library-name>areas</library-name>
	<library-display-name>Areas</library-display-name>    
    <library-icon file="mission.png" />
  </description>

  <multi-choice choice1-var="Border Style" choice2-var="Border Color"
    choice3-var="Border Width" choice4-var="Border Opacity">
    <node unique-code="Mission" hierarchy-code="1.1.1.1" choice1-value="Solid"
      choice2-value="Black" choice3-value="1 pt" choice4-value="75%">
      <element description="Solid/Black/1pt/75%">
        <area>
          <perimeter-rendering line-style="solid"
            line-color="333333" line-width="1" line-opacity="1" />
          <surface-rendering fill-opacity="0.2" fill-color="333333" />
          <icon file="mission" />
        </area>
      </element>
    </node>
    <node unique-code="Unknown" hierarchy-code="1.1.1.2" choice1-value="Solid"
      choice2-value="Yellow" choice3-value="1 pt" choice4-value="75%">
      <element description="Solid/Yellow/1pt/75%">
        <area>
          <perimeter-rendering line-style="solid"
            line-color="eeee33" line-width="1" line-opacity="1" />
          <surface-rendering fill-opacity="0.2" fill-color="eeee33" />
          <icon file="unknown" />
        </area>
      </element>
    </node>
    <node unique-code="Danger" hierarchy-code="1.1.1.3" choice1-value="Solid"
      choice2-value="Red" choice3-value="1 pt" choice4-value="75%">
      <element description="Solid/Red/1pt/75%">
        <area>
          <perimeter-rendering line-style="solid"
            line-color="ff3333" line-width="1" line-opacity="1" />
          <surface-rendering fill-opacity="0.2" fill-color="ff3333" />
          <icon file="danger" />
        </area>
      </element>
    </node>
    <node unique-code="Safe" hierarchy-code="1.1.1.4" choice1-value="Solid"
      choice2-value="Green" choice3-value="1 pt" choice4-value="75%">
      <element description="Solid/Green/1pt/75%">
        <area>
          <perimeter-rendering line-style="solid"
            line-color="33ff33" line-width="1" line-opacity="1" />
          <surface-rendering fill-opacity="0.2" fill-color="33ff33" />
          <icon file="safe" />
        </area>
      </element>
    </node>

  </multi-choice>
</elements>